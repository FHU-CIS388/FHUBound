<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="FHUBound.Views.StorePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Store">
    <ContentPage.Content >
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                </Grid.RowDefinitions>

                <BoxView
                    BackgroundColor="#DCDCDC"
                    Grid.RowSpan="7">
                    
                </BoxView>
                
                <StackLayout Grid.Row="0">
                    <Image Source="icons8_jacket_100.png"
                           HeightRequest="100"
                           ></Image>
                        <Button
                       x:Name="jacketButton"
                       Clicked="testButton_Clicked"
                        Text="1000 pts"
                            TextColor="White"
                            BackgroundColor="#808080"
                        ></Button>
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Image Source="icons8_t_shirt_100.png"
                           HeightRequest="100"
                           ></Image>
                    <Button
                       x:Name="shirtButton"
                       Clicked="shirtButton_Clicked"
                        Text="850 pts"
                         TextColor="White"
                            BackgroundColor="#808080"
                        ></Button>
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Image Source="icons8_cap_64.png"
                           HeightRequest="100"
                           ></Image>
                    <Button
                       x:Name="capButton"
                       Clicked="capButton_Clicked"
                        Text="500 pts"
                        TextColor="White"
                            BackgroundColor="#808080"
                     
                        
                        ></Button>
                </StackLayout>
                <StackLayout Grid.Row="3">
                    <Image Source="icons8_book_200.png"
                           HeightRequest="100"
                           ></Image>
                    <Button
                       x:Name="bookButton"
                       Clicked="bookButton_Clicked"
                        Text="50 pts"
                        TextColor="White"
                            BackgroundColor="#808080"
                        ></Button>
                </StackLayout>
                <StackLayout Grid.Row="4">
                    <Image Source="icons8_gift_64.png"
                           HeightRequest="100"
                           ></Image>
                    <Button
                       x:Name="giftButton"
                       Clicked="giftButton_Clicked"
                        Text="5000 pts"
                        TextColor="White"
                            BackgroundColor="#808080"
                        ></Button>
                </StackLayout>



            </Grid>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
