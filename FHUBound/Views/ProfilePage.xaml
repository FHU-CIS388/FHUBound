<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="FHUBound.Views.ProfilePage">
    <ContentPage.Content>
        <pancake:PancakeView>
            <StackLayout Margin="10">
                <StackLayout Padding="100, 50, 100, 25">

                    <Frame CornerRadius="100"
                           Padding="0"
                           IsClippedToBounds="True"
                           HasShadow="True">
                        
                        <Image Source="profile.jpg" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"                           
                           />
                        
                    </Frame>

                    <Label Text="John Doe"
                           Style="{StaticResource HeaderTitle}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </StackLayout>
                
                <BoxView HeightRequest="2"
                         Color="{StaticResource FHUMaroon}"
                         Margin="50,10,50,10" 
                         VerticalOptions="Start"/>
                
                <Grid Padding="10"
                      VerticalOptions="Start">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        
                    </Grid.RowDefinitions>
                    <Label Text="Maroon &amp; Gold Day:"
                           Grid.Row="0"
                           Grid.Column="0"
                           HorizontalOptions="StartAndExpand"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumText}"
                           Margin="5"/>

                    <Label Text="Registered!"
                           Grid.Row="0"
                           Grid.Column="1"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumBoldText}"
                           Margin="5"/>

                    <Label Text="Campus Tour:"
                           Grid.Row="1"
                           Grid.Column="0"
                           HorizontalOptions="StartAndExpand"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumText}"
                           Margin="5"/>

                    <Label Text="Not Registered"
                           Grid.Row="1"
                           Grid.Column="1"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumItalicText}" 
                           Margin="5" />

                    <Label Text="Interface:"
                           Grid.Row="2"
                           Grid.Column="0"
                           HorizontalOptions="StartAndExpand"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumText}"
                           Margin="5"/>

                    <Label Text="Not Registered"
                           Grid.Row="2"
                           Grid.Column="1"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumItalicText}" 
                           Margin="5" />

                    <Label Text="Classes:"
                           Grid.Row="3"
                           Grid.Column="0"
                           HorizontalOptions="StartAndExpand"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumText}"
                           Margin="5"/>

                    <Label Text="Not Registered"
                           Grid.Row="3"
                           Grid.Column="1"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           Style="{StaticResource MediumItalicText}" 
                           Margin="5" />
                </Grid>

                <BoxView HeightRequest="2"
                         Color="{StaticResource FHUMaroon}"
                         Margin="50,10,50,10" 
                         VerticalOptions="Start"/>

                <StackLayout>
                    <Label Text="Bound Bucks: 540" 
                           HorizontalOptions="CenterAndExpand"
                           VerticalOptions="CenterAndExpand"                           
                           Style="{StaticResource HeaderTitle}"
                           Margin="10"/>
                    
                    <Button Text="Redeem BB!"
                            TextColor="{StaticResource FHUMaroon}"
                            BorderColor="{StaticResource FHUMaroon}"
                            BorderWidth="3"
                            CornerRadius="20"
                            WidthRequest="250"
                            BackgroundColor="{StaticResource White}"                            
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"/>
                </StackLayout>
                
            </StackLayout>            
        </pancake:PancakeView>
        
    </ContentPage.Content>
</ContentPage>
