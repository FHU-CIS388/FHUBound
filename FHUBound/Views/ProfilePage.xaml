<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="FHUBound.Views.ProfilePage"
             
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">
            
    <ContentPage.Content>
        <ScrollView>
            <Grid Grid.RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto" ></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    
                    
                </Grid.RowDefinitions>

                
                
                <BoxView
                    Grid.Row="0"
                  
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    WidthRequest="300"
                    HeightRequest="200"
                    Color="black"
                    ></BoxView>
                
                
                
                   
                    
                    
             

                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">

                    <controls:CircleImage 
                        Source="Jack_Headshot_Square.jpg" 
                        WidthRequest="120" 
                        HeightRequest="240" 
                        Grid.Row="0" 
                        Scale="2.25"
                        HorizontalOptions="Center" 
                        VerticalOptions="Center"
                        
                        
                        ></controls:CircleImage>
                </StackLayout>




                <BoxView
                    Grid.Row="1"
                    WidthRequest ="60"
                    HeightRequest="60"
                
                    BackgroundColor="Black"
                   >

                </BoxView>
                <BoxView
                    Grid.Row="1"
                    HeightRequest="60"
                    WidthRequest="260"
                    BackgroundColor="Maroon"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    CornerRadius="10"
                    ></BoxView>


                
               

               
                <Label
                    Text="{Binding User.Username}"
                    Grid.Row="1"
                    TextColor="White"
                    HorizontalOptions="Center"
                    FontSize="40"
          
                    >


                </Label>

                <BoxView
                    Grid.Row="2"
                    BackgroundColor="black"
                    WidthRequest="400"
                    HeightRequest="50"
                    
                    >

                </BoxView>

                <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" >

                    <Label
                        
                        FontSize="30"
                        TextColor="White"
                        HorizontalOptions="Center"
                        Text="Points: "
                        ></Label>
                    
                    <Label
                    Text= "{Binding User.Points}"
                    FontSize="30"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Grid.Row="2" 
                   
                    
                    
                  ></Label>
                    
                    
                </StackLayout>
               

                <BoxView
                    Grid.Row="3"
                    BackgroundColor="black"
                    WidthRequest="400"
                    HeightRequest="50"
                    
                    >

                </BoxView>


                <StackLayout Grid.Row="3" Orientation="Horizontal" HorizontalOptions="Center" >

                    <Label
                        
                        FontSize="30"
                        TextColor="White"
                        HorizontalOptions="Center"
                        Text="TotalPoints: "
                        ></Label>

                    <Label
                    Text= "{Binding User.TotalPoints}"
                    FontSize="30"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Grid.Row="3" 
                   
                    
                    
                  ></Label>


                </StackLayout>


                <BoxView
                    Grid.Row="4"
                    BackgroundColor="black"
                    WidthRequest="400"
                    HeightRequest="50"
                    
                    >

                </BoxView>

                <StackLayout Grid.Row="4" Orientation="Horizontal" HorizontalOptions="Center" >

                    <Label
                        
                        FontSize="30"
                        TextColor="White"
                        HorizontalOptions="Center"
                        Text="level: "
                        ></Label>

                    <Label
                    Text= "{Binding User.Level}"
                    FontSize="30"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Grid.Row="4" 
                   
                    
                    
                  ></Label>


                </StackLayout>





                <Button
                    Grid.Row="5"
                    Text="Edit"
                    WidthRequest="20"
                    x:Name="editButton"
                    Clicked="editButton_Clicked"
                    
                    
                    ></Button>
               
                
                
                

            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
